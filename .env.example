# GoComics Authentication
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env TO GIT

# Your GoComics account credentials
GOCOMICS_EMAIL=your-email@example.com
GOCOMICS_PASSWORD=your-password

# Custom page URLs (get these from your GoComics profile)
# Format: https://www.gocomics.com/profile/USERNAME/comics/PAGEID
CUSTOM_PAGE_1=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_1_CATEGORY=political

CUSTOM_PAGE_2=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_2_CATEGORY=daily

CUSTOM_PAGE_3=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_3_CATEGORY=daily

CUSTOM_PAGE_4=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_4_CATEGORY=daily

CUSTOM_PAGE_5=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_5_CATEGORY=daily

CUSTOM_PAGE_6=https://www.gocomics.com/profile/USERNAME/comics/XXXXXX
CUSTOM_PAGE_6_CATEGORY=daily

# Optional: OAuth configuration (uses defaults if not set)
# OAUTH_BASE_URL=https://...
# OAUTH_PARAMS=client_id=...
